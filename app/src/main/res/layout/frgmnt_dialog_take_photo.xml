<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants"
    app:cardBackgroundColor="@color/orange"
    app:cardCornerRadius="7dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/orange"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.camera.view.PreviewView
                android:id="@+id/camera_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/margin_16"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/image_capture_button"
                    android:layout_width="@dimen/margin_56"
                    android:layout_height="@dimen/margin_56"
                    android:contentDescription="Фото"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:tint="@color/orange"
                    android:background="@color/transparent"
                    android:layout_marginEnd="@dimen/margin_17"
                    android:src="@drawable/photo_camera_24" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/camera_swith_button"
                    android:layout_width="@dimen/margin_56"
                    android:layout_height="@dimen/margin_56"
                    android:contentDescription="Сменить камеру"
                    android:background="@color/transparent"
                    android:tint="@color/orange"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/photo_camera_rotate_24" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


